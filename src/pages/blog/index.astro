---
import Layout from '../../layouts/Layout.astro';
import post1 from '../../assets/post1.svg';
---
<Layout>
	<div class="max-w-7xl mx-auto px-6 py-12 pb-20">
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
			<a href="/blog/posts/strateji" class="group block rounded-xl overflow-hidden bg-white shadow-sm transition-all duration-200 hover:shadow-xl hover:-translate-y-0.5">
				<div class="aspect-[16/9]">
					<img src={post1.src} alt="Strateji" class="w-full h-full object-cover object-top" />
				</div>
				<div class="p-5">
					<h2 class="text-lg font-semibold m-0 group-hover:text-red-800 transition-colors duration-200">Yapay Zeka Çağında Strateji</h2>
					<p class="text-sm text-luxury-muted mt-2 mb-0">Yapay zeka ile işletmenizi başarıya hazırlayın</p>
				</div>
			</a>
		</div>
	</div>
</Layout>