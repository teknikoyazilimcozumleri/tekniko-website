---
import '../styles/global.css';
import tekniko_white from '../assets/tekniko_white.svg';
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Tekniko Yazılım Çözümleri</title>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body class="h-full bg-white text-black font-sans leading-relaxed">
		<header class="fixed top-0 left-0 right-0 z-50 bg-black/95 backdrop-blur-xl border-b border-luxury-border">
			<div class="max-w-7xl mx-auto px-6 flex items-center justify-between h-20">
				<a class="flex items-center -ml-8" href="/">
					<img src={tekniko_white.src} alt="Tekniko Yazılım Çözümleri" class="h-35 w-auto brightness-0 invert transition-all duration-300 hover:brightness-0 hover:invert hover:sepia hover:saturate-[5] hover:hue-rotate-45" />
				</a>
				<nav class="hidden lg:flex gap-10 items -center">
                	<div class="relative group">
						<a href="/#about" class="text-white text-sm font-normal tracking-wide py-2 transition-colors duration-200 hover:text-red-800">Hakkımızda</a>
					</div>
					<div class="relative group">
						<a href="/#services" class="text-white text-sm font-normal tracking-wide py-2 transition-colors duration-200 hover:text-red-800">Hizmetlerimiz</a>
					</div>
					<div class="relative group">
						<a href="/#contact" class="text-white text-sm font-normal tracking-wide py-2 transition-colors duration-200 hover:text-red-800">Kontakt</a>
					</div>
				</nav>
			</div>
		</header>
		<main class="pt-20 min-h-screen">
			<slot />
		</main>
		<footer class="bg-luxury-gray border-t border-luxury-border mt-20">
			<div class="border-t border-luxury-border py-5">
				<div class="max-w-7xl mx-auto px-6">
					<p class="text-luxury-muted text-xs text-center m-0">© Tekniko Yazılım Çözümleri</p>
				</div>
			</div>
		</footer>
	</body>
</html>
